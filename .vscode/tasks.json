{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Main",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always", 
                "-g", "-o",
                "${workspaceFolder}/yahtcbot",
                "${workspaceFolder}/*.c",
              ],
            "options": { "cwd": "${fileDirname}" },
            "problemMatcher": [ "$gcc" ],
            "group": { "kind": "build", "isDefault": true }
        } ,
        {
            "type": "cppbuild",
            "label": "Build Tests",
            "command": "/usr/bin/gcc",
            "args": ["-g", "-o", "${workspaceFolder}/test", "${workspaceFolder}/test.c"],
            "options": { "cwd": "${fileDirname}" },
            "problemMatcher": [ "$gcc" ],
            "group": { "kind": "build", "isDefault":false }
        }
    ],
    "version": "2.0.0"
}